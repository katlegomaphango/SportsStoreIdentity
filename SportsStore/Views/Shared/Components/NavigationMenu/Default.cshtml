@model IEnumerable<Category>

<a class="btn btn-block btn-outline-secondary w-100"
   asp-action="Index"
   asp-controller="Home"
   asp-route-category="">
    Home
</a>

@foreach (var c in Model)
{
    <a class="btn btn-block w-100 mt-2
       @(c.CategoryName == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-secondary")"
       asp-action="Index"
       asp-controller="Home"
       asp-route-category="@c.CategoryName"
       asp-route-productPage="1">
        @c.CategoryName
    </a>
}