@model Product

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span style="float:right">
                <small style="color:inherit">@Model.Price.ToString("C")</small>
            </span>
        </h4>
    </div>
    <form id="@Model.ProductID" asp-page="/Cart" method="post">
        <input type="hidden" asp-for="ProductID" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.Path" />
        <span class="card-text p-1">
            @Model.Description
            @if(User.Identity.IsAuthenticated && User.IsInRole("Customer"))
            {
                <button type="submit"
                        class="btn btn-success btn-sm pull-right" style="float:right">
                    Add To Cart
                </button>
            }
        </span>
    </form>
</div>
